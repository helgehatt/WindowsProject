<UserControl x:Class="ClassDiagramTool.View.UserControls.StatusBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassDiagramTool.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <StatusBar Background="Transparent">
        <StatusBar.ItemsPanel>
            <ItemsPanelTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ItemsPanelTemplate>
        </StatusBar.ItemsPanel>
        <StatusBarItem Grid.Column="1">
            <TextBlock Foreground="LightGray" Text="Ready"/>
        </StatusBarItem>
        <StatusBarItem Grid.Column="2">
            <TextBlock Foreground="LightGray" Text="-"/>
        </StatusBarItem>
        <StatusBarItem Grid.Column="3">
            <Slider Foreground="LightGray" Width="100"/>
        </StatusBarItem>
        <StatusBarItem Grid.Column="4">
            <TextBlock Foreground="LightGray" Text="+"/>
        </StatusBarItem>
    </StatusBar>
</UserControl>
