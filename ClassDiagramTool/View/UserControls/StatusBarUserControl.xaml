<UserControl x:Class="ClassDiagramTool.View.UserControls.StatusBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassDiagramTool.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">

    <Grid Height="20" VerticalAlignment="Center" Margin="20,0,0,0">
        <TextBlock Foreground="LightGray" Text="{Binding StatusText}"/>
    </Grid>
</UserControl>
