<local:LineControl x:Class="ClassDiagramTool.View.LineControls.AssociationLineControl"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:ClassDiagramTool.View.LineControls"
                   xmlns:uc="clr-namespace:ClassDiagramTool.View.UserControls"
                   mc:Ignorable="d">
    
    <uc:LineUserControl>
        <Grid>
            <Line X1="{Binding From.Points[0].X}" Y1="{Binding From.Points[0].Y}" X2="{Binding From.Points[0].X}" Y2="{Binding To.Points[0].Y}"/>
            <Line X1="{Binding From.Points[0].X}" Y1="{Binding To  .Points[0].Y}" X2="{Binding To  .Points[0].X}" Y2="{Binding To.Points[0].Y}"/>
        </Grid>
    </uc:LineUserControl>
    
</local:LineControl>
