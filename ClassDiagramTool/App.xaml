<Application x:Class="ClassDiagramTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ClassDiagramTool"
             xmlns:shapes="clr-namespace:ClassDiagramTool.ViewModel.Shapes"
             xmlns:lines="clr-namespace:ClassDiagramTool.ViewModel.Lines"
             xmlns:userControls="clr-namespace:ClassDiagramTool.View.UserControls"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View\Resources\ExpanderTemplates.xaml"/>
                <ResourceDictionary Source="View\Resources\ColorDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type shapes:SquareViewModel}">
                <userControls:ClassShapeUserControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type lines:SolidLineViewModel}">
                <userControls:LineUserControl/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
